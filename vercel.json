{
  "version": 2,
  "builds": [
    {
      "src": "./backend/server.js",
      "use": "@vercel/node",
      "config": {
        "distDir": "./dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "./frontend",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}
